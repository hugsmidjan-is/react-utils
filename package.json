		"Már Örlygsson <mar@hugsmidjan.is> (http://mar.anomy.net)"
	],
	"license": "UNLICENCED",
	"scripts": {
		"publishdist": "yarn run build && npm publish dist",
		"prepublishOnly": "echo \"\nRun 'yarn run publishdist' to publish this package\n\n\"  && exit 1",
		"format": "eslint --fix  \"*.js\" \"build/*.js\" \"src/**/*.{js,ts,tsx}\"  &&  prettier --write \"*.md\" \"*.json\"  \"src/**/*.json\"",
		"build": "gulp build  &&  yarn run test",
		"dev": "gulp dev",
		"test": "ospec '__tests/**/*.tests.js'",
		"test:dev": "yarn run test  &&  onchange '__tests/**/*.tests.js' -f add,change -- ospec {{changed}}"
	},
	"dist_package_json": {
		"scripts": {}
	},
	"engines": {
		"node": ">=10"
	},
	"dependencies": {
		"qj": "npm:@hugsmidjan_is/qj@^3",
		"tslib": "^1.10.0"
	},
	"peerDependencies": {
		"react": "^16.10.2",
		"react-dom": "^16.10.2"
	},
	"devDependencies": {
		"@hugsmidjan/gulp-rollup": "^0.3.17",
		"@hugsmidjan/hxmstyle": "^2.3.1",
		"@types/ospec": "^4.0.0",
		"@types/react": "^16.9.2",
		"@types/react-dom": "^16.9.4",
		"@typescript-eslint/eslint-plugin": "^2.6.1",
		"@typescript-eslint/parser": "^2.6.1",
		"del": "^5.1.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-destructuring": "^2.1.0",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^2.2.0",
		"gulp": "^4.0.2",
		"onchange": "^6.1.0",
		"ospec": "^4.0.1",
		"prettier": "^1.18.2",
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"typescript": "^3.6.4"
	},
	"hxmstyle": {
		"options": {
			"react": [],
			"typescript": []
		},
		"dependenciesAdded": [
			"@typescript-eslint/eslint-plugin",
			"@typescript-eslint/parser",
			"eslint",
			"eslint-config-prettier",
			"eslint-plugin-destructuring",
			"eslint-plugin-prettier",
